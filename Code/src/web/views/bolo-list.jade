extends layout


block jumbo
    .jumbotron
        .container
            h1 Be On the Lookout
            p Browse Active BOLOs


block content
    include ./partials/global-alerts.jade

    if bolos && 0 === bolos.length
        p.lead No active BOLOs at this time.

    .row
        for bolo in bolos
            div.col-sm-6.col-md-3
                include ./partials/bolo-thumbnail.jade
                    .actions
                        a.btn.btn-default( href="/bolo/edit/" + bolo.id, role="button" ) Edit
                        a.btn.btn-default( href="/bolo/details/" + bolo.id role="button" ) Details
                        a.btn.btn-warning( href="/bolo/archive/" + bolo.id role="button" ) Archive
                        .dropdown
                          a.btn.btn-default( href="#", data-toggle="dropdown" role="button" ) Update
                          ul.dropdown-menu(role='menu', aria-labelledby='dropdownMenu')
                            li
                              a(href='/bolo/update/custody/' + bolo.id, tabindex='-1') In Custody
                            li 
                              a(href='/bolo/update/located/' + bolo.id, tabindex='-1') Located
                            li
                              a(href='/bolo/update/cancelled/' + bolo.id, tabindex='-1') Cancelled

    .row.text-center
        - var route = '/bolo'
        include ./partials/paging.jade
